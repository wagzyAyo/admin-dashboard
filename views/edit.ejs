<%- include('partials/header') %>
<h1>Edit data</h1>
<input type="text" value='<%=Data[0]._id%>' class="form-control" readonly>
<form action="/update/<%=Data[0]._id%>" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-check">
        <input type="radio" name="tag" class="form-check-input" value="sale" id="sale" <%= Data[0].tag === 'sale' ? 'checked' : '' %>>
        <label class="form-check-label" for="sale">
            Sale
          </label>
    </div>
    <div class="form-check">
        

          <input type="radio" name="tag" class="form-check-input" value="lease" id="lease" <%= Data[0].tag === 'lease' ? 'checked' : '' %>>
          <label for="lease" class="form-check-label">
            Lease
          </label>
    </div>
    <div class="form-check">
          <input type="radio" name="tag" class="form-check-input" value="rent" id="rent" <%= Data[0].tag === 'rent' ? 'checked' : '' %>>
          <label for="rent" class="form-check-label">
            Rent
          </label>
    </div>

    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" placeholder="Enter property name" class="form-control" value='<%=Data[0].name%>' required>
      <label for="location">Location</label>
      <input type="text" name="location" placeholder="Enter property location" class="form-control" value="<%=Data[0].location%>" required>
      <label for="size">Size</label>
      <input type="text" name="size" placeholder="Enter size of property and measurement" class="form-control" value="<%=Data[0].size%>" required>
      <label for="short">Short Description</label>
      <input type="text" name="short" placeholder="Enter short Description for the property" class="form-control" value="<%=Data[0].short%>"required>
      <label for="amount">Amount</label>
      <input type="text" name="amount" placeholder="Enter amount" class="form-control" value="<%=Data[0].amount%>" required>
      <label for="description">Full description</label>
      <textarea name="description" cols="30" rows="10" placeholder="Full description for property"class="form-control" required><%=Data[0].description%></textarea>
      <!----Image url-->
      <div id="imageInputs">
        <label for="imageUrls">Image URLs</label>
        <input type="text" name="imageUrls" placeholder="Enter image URLs seperated by commas" class="form-control image-url" value="<%=Data[0].imageURL.join(',')%>">
    </div>
    

    <!----Submit button ----->
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
<%- include('partials/footer') %>