<%- include('partials/header') %>
<h1>Add new property</h1>

<form action="/addpost" method="post">
    <div class="form-check">
        <input type="radio" name="tag" class="form-check-input" value="sale" id="sale">
        <label class="form-check-label" for="sale">
            Sale
          </label>
    </div>
    <div class="form-check">

          <input type="radio" name="tag" class="form-check-input" value="lease" id="lease">
          <label for="lease" class="form-check-label">
            Lease
          </label>
    </div>
    <div class="form-check">
          <input type="radio" name="tag" class="form-check-input" value="rent" id="rent">
          <label for="rent" class="form-check-label">
            Rent
          </label>
    </div>

    <div class="form-group"></div>
    <label for="name">Name</label>
    <input type="text" name="name" placeholder="Enter property name" class="form-control" required>
    <label for="location">Location</label>
    <input type="text" name="location" placeholder="Enter property location" class="form-control" required>
    <label for="size">Size</label>
    <input type="text" name="size" placeholder="Enter size of property and measurement" class="form-control" required>
    <label for="short">Short Description</label>
    <input type="text" name="short" placeholder="Enter short Description for the property" class="form-control" required>
    <label for="amount">Amount</label>
    <input type="text" name="amount" placeholder="Enter amount" class="form-control" required>
    <label for="description">Full description</label>
    <textarea name="description" cols="30" rows="10" placeholder="Full description for property"class="form-control" required></textarea>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
<%- include('partials/footer') %>